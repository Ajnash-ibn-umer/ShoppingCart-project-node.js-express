<!----=====================mainsection start================================-->
<main>
  <div class="container pt-5">
    <div class="row">
      {{#each product}}
      <div class="col-4 col-md-2 ">
        <div class="card" style="">
          <img class="card-img-top" src="{{this.image}}" alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title">
              {{this.name}}
            </h5>
            <p class="card-text">
              {{this.description}}
            </p>
            <a href="#" class="btn btn-primary">
              Add to Cart
            </a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>