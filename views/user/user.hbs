<!----=====================mainsection start================================-->
<main>
  <div class="container pt-5">
    <div class="row">
      {{#each products}}
      <div class="col-4 col-md-2 d-flex flex-row flex-container ">
        <div class="card" style="">
          <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title">
              {{this.name}}
            </h5>
            <p class="card-text">
              {{this.description}}
            </p>
            <a href="#" class="btn btn-primary">
              Add to Cart
            </a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>