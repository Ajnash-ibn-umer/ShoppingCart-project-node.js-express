

<section>
    <div class="container pt-5">
        <h3>CART</h3>
<table class="table pt-4" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Image</th>
      <th scope="col">Product</th>
      <th scope="col">Quantity</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td><img src="/product-images/{{this._id}}.jpg" style="width: 60px; height: 60px;" alt=""></td>
      <td>{{this.name}}</td>
      <td class="flex-row d-flex"><button class="btn btn-dark">-</button><p>1</p><button class="btn btn-dark">+</button></td>
      <td><button class="btn btn-danger">REMOVE</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
