<section>
    <div class="container">
       
        <div class="img-sec"><img src="/product-images/{{product._id}}.jpg" alt=""></div>
         
        <div class="detail-sec">
        <h3 class="prodName">{{product.name}}</h3>
        <h4 class="price">Rs {{product.price}}</h4>
        <h5 class="description"><span style="font-size: x-large; font-weight: bold;">Description</span><br>{{product.description}}</h4>
         
        </div>
     
 
    </div>
    <div class="buy-now"> <h3 class="price" style="font-weight: bold; margin-left: 30px;">Rs {{product.price}}</h3><a href="/placeOrder?total={{product.price}}&proId={{product._id}}" class="btn ">BUY NOW</a></div>
</section>