<div class="container mt-5">
    <div class="row">
  <a href="/admin/add-product" class="btn btn-success ml-auto mb-1" > Add Products</a>
    </div>
  
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" style="width: 60px; height: 100px;" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit </a><a href="/admin/delete-product/{{this._id}}"  class="btn btn-danger ml-1"  onclick="return confirm('do you want to delete {{this.name}}')" >Delete</a></td>
    </tr>
     {{/each}}
   
  </tbody>
</table>
</div>

